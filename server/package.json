    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.6.3",
    "nodemailer-sendgrid": "^1.0.3",
    "nodemon": "^2.0.4",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "passport-jwt": "^4.0.0",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.3.0",
    "ts-node": "^10.5.0",
    "typeorm": "^0.2.41",
    "typescript": "^4.1.4"
  },
  "devDependencies": {
    "@twgdev/prettier-config": "^1.0.2",
