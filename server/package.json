{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc && cp package.json dist/",
    "dev": "yarn migrate && yarn build && concurrently \"tsc -w\" \"nodemon dist/server.js\"",
    "start": "yarn migrate && yarn build && cd dist && node server.js",
    "typeorm": "node --require ./node_modules/ts-node/register ./node_modules/typeorm/cli.js --config src/connectors/db.ts",
    "typeorm:runcmd": "ts-node --transpile-only ./node_modules/typeorm/cli.js --config src/connectors/db.ts ",
    "migrate": "yarn typeorm:runcmd migration:run"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "class-validator": "^0.12.2",
    "concurrently": "^5.3.0",
    "cors": "^2.8.5",
